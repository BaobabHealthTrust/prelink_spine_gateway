<%= form_tag(:action => "place_order") do %>

  <%= hidden_field_tag "FirstName", "#{@first_name}" %>
  <%= hidden_field_tag "LastName", "#{@last_name}" %>
  <%= hidden_field_tag "NationalId", "#{@national_id}" %>
  <%= hidden_field_tag "Age", "#{@age}" %>
  <%= hidden_field_tag "Dob", "#{@dob}" %>
  <%= hidden_field_tag "Gender", "#{@gender}" %>
  <%= hidden_field_tag "PatientId", "#{@patient.id}" %>

  <%= select_tag "PriorityCode",
    options_for_select(["Normal", "Low", "High"]),
    {
    :helptext => "Select tests priority",
    :nested => :true
  }
%>

  <%= text_field_tag "DateCollected", nil,
    {
    :helptext => "Date collected",
    :field_type => 'date'
  }
%>

  <%= text_field_tag "DateReceived", nil,
    {
    :helptext => "Date received",
    :field_type => 'date'
  }
%>

  <%= text_field_tag "FolioNumber", nil,
    {
    :helptext => "Folio Number"
  }
%>

  <%= text_field_tag "DoctorLocationCode", nil,
    {
    :helptext => "Doctor Location Code"
  }
%>

  <%= select_tag "TestCodes[]",
    options_for_select(@codes),
    {
    :helptext => "Select tests to be done",
    :multiple => :multiple,
    :nested => :true
  }
%>


<% end %>